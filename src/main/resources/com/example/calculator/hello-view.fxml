<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="367.0" prefWidth="282.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="appName" text="CALCULATOR" />
   <TextField fx:id="inputField" prefHeight="51.0" prefWidth="227.0" />
   <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onClearButtonClick" prefHeight="23.0" prefWidth="52.0" text="Clear" textAlignment="CENTER">
      <VBox.margin>
         <Insets left="190.0" />
      </VBox.margin>
      <padding>
         <Insets right="12.0" />
      </padding>
   </Button>
   <FlowPane hgap="20.0" orientation="VERTICAL" prefHeight="86.0" prefWidth="237.0" vgap="20.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onButtonZeroClick" prefHeight="33.0" prefWidth="28.0" text="0" />
         <Button mnemonicParsing="false" onAction="#onButtonOneClick" prefHeight="33.0" prefWidth="28.0" text="1" />
         <Button mnemonicParsing="false" onAction="#onButtonTwoClick" prefHeight="33.0" prefWidth="28.0" text="2" />
         <Button mnemonicParsing="false" onAction="#onButtonThreeClick" prefHeight="33.0" prefWidth="28.0" text="3" />
         <Button mnemonicParsing="false" onAction="#onButtonFourClick" prefHeight="33.0" prefWidth="28.0" text="4" />
         <Button mnemonicParsing="false" onAction="#onButtonFiveClick" prefHeight="33.0" prefWidth="28.0" text="5" />
         <Button mnemonicParsing="false" onAction="#onButtonSixClick" prefHeight="33.0" prefWidth="28.0" text="6" />
         <Button mnemonicParsing="false" onAction="#onButtonSevenClick" prefHeight="33.0" prefWidth="28.0" text="7" />
         <Button mnemonicParsing="false" onAction="#onButtonEightClick" prefHeight="33.0" prefWidth="28.0" text="8" />
         <Button mnemonicParsing="false" onAction="#onButtonNineClick" prefHeight="33.0" prefWidth="28.0" text="9" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets left="20.0" right="20.0" />
      </padding>
   </FlowPane>
   <FlowPane hgap="18.0" prefHeight="60.0" prefWidth="250.0" vgap="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onButtonPlusClick" prefHeight="25.0" prefWidth="42.0" text="+" />
         <Button mnemonicParsing="false" onAction="#onButtonMinusClick" prefHeight="25.0" prefWidth="41.0" text="-" />
         <Button mnemonicParsing="false" onAction="#onButtonMultiplicationClick" prefHeight="25.0" prefWidth="44.0" text="*" />
         <Button mnemonicParsing="false" onAction="#onButtonDivisionClick" prefHeight="25.0" prefWidth="40.0" text="/" />
         <Button mnemonicParsing="false" onAction="#onButtonEqualClick" prefHeight="25.0" prefWidth="221.0" text="=" />
      </children>
      <padding>
         <Insets left="10.0" />
      </padding>
   </FlowPane>
</VBox>
